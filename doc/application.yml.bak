# EMBEDDED SERVER CONFIGURATION (ServerProperties)
server
  port: 8080
  session-timeout: 600
  tomcat
    access-log-pattern: common
    access-log-enabled: true
    protocol-header: x-forwarded-proto
    remote-ip-header: x-forwarded-for
    basedir: /tmp
    background-processor-delay: 30
    max-threads: 0
    uri-encoding: UTF-8

# HTTP encoding (HttpEncodingProperties)
spring
  http
    encoding
      charset: UTF-8
      enabled: true
      force: true
# DATASOURCE (DataSourceAutoConfiguration & DataSourceProperties)
  datasource
    name: datasource
    initialize: false
    schema: schema.sql
    data: data.sql
    sql-script-encoding: utf-8
    platform: mysql
    continue-on-error: false
    separator: ;
    driverClassName: com.mysql.jdbc.Driver
    url: jdbc:mysql://qdm112529519.my3w.com:3306/qdm112529519_db?useUnicode=true&characterEncoding=UTF-8
    username: qdm112529519
    password: cs105221791
    max-active: 100
    max-idle: 8
    min-idle: 8
    initial-size: 10
    validation-query: select 1
    test-on-borrow: false
    test-on-return: false
    test-while-idle: true
    time-between-eviction-runs-millis: 3000
    min-evictable-idle-time-millis: 3000
    max-wait: 300
    jmx-enabled: false
# DATASOURCE (PersistenceExceptionTranslationAutoConfiguration
  dao
    exceptiontranslation
      enabled: true
# JPA (JpaBaseConfiguration, HibernateJpaAutoConfiguration)
  jpa
    open-in-view: true
    show-sql: true
    database-platform: org.hibernate.dialect.MySQLDialect
    database: MYSQL
    generate-ddl: true
    hibernate.ddl-auto: update
  data
    jpa
      repositories
        enabled: true
